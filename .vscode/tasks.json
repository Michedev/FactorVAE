{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "conda:train-gpu",
            "type": "shell",
            "command": "anaconda-project",
            "args": ["run", "train-gpu"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "conda:train-cpu",
            "type": "shell",
            "command": "anaconda-project",
            "args": ["run", "train-cpu"]
        },
        {
            "label": "conda:traverse",
            "type": "shell",
            "command": "anaconda-project",
            "args": [
                "run",
                "python",
                "traverse.py",
                "checkpoint_path=saved_models/${input:checkpointPath}",
                "z_linspace.min=-1",
                "z_linspace.max=1",
                "z_linspace.num=15"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "conda:generate",
            "type": "shell",
            "command": "anaconda-project",
            "args": [
                "run",
                "python",
                "generate.py",
                "checkpoint_path=saved_models/${input:checkpointPath}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "conda:disentangle",
            "type": "shell",
            "command": "anaconda-project",
            "args": [
                "run",
                "python",
                "disentangle.py",
                "checkpoint_path=saved_models/${input:checkpointPath}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }

    ],
    "inputs": [
        {
            "id": "checkpointPath",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "ls saved_models/",
                "cwd": "${workspaceFolder}",
                "env": {
                    "WORKSPACE": "${workspaceFolder[0]}",
                    "FILE": "${file}",
                    "PROJECT": "${workspaceFolderBasename}"
                }
            }
                  
        }
    ]
}